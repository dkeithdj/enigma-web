---
import Tag from "./Tag.astro";
import { Card, CardDescription, CardHeader } from "./ui/card";
import { Image } from "astro:assets";

const { first_name, last_name, position, year_level, program, term, image } =
  Astro.props;
---

<Card
  className="w-[150px] rounded-2xl p-2 mx-4 my-4 shadow-md hover:shadow-xl transition-shadow duration-300 ease-in-out"
>
  <div class="flex flex-col items-center">
    <div class="w-[130px] h-[200px] overflow-hidden rounded-xl">
      <Image
        src={image}
        alt={last_name}
        width="150"
        height="200"
        class="object-cover w-full h-full"
      />
    </div>
  </div>
  <CardHeader className="px-2 py-2 ">
    <div class="flex items-start justify-between">
      <div class="space-y-2 flex-1">
        <div>
          <p class="font-bold text-sm">{`${first_name} ${last_name}`}</p>
        </div>
        <CardDescription className="text-xs p-0 md:max-w-[500px]">
          {`${position}`}
        </CardDescription>
        {
          program && (
            <div class="flex justify-between">
              <Tag
                tagname={program}
                bgColor="bg-bahamablue-700"
                textColor="text-bahamablue-50"
              />
              <Tag
                tagname={year_level}
                bgColor="bg-rosecherry-700"
                textColor="text-rosecherry-50"
              />
            </div>
          )
        }
      </div>
    </div>
  </CardHeader>
</Card>
