---
import {
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
} from "./ui/card";
import { Image } from "astro:assets";

const cardStyle = "max-w-[200px] rounded-2xl p-2 mx-4 my-6";
const { first_name, last_name, position, term, imageUrl } = Astro.props;
---

<Card className={cardStyle}>
  <div class="">
    <Image
      src="https://picsum.photos/200/250?random=1"
      alt={"test"}
      width="200"
      height="250"
      class="rounded-xl"
    />
  </div>
  <CardHeader className="px-2 py-2 ">
    <div class="flex items-start justify-between">
      <div class="space-y-2">
        <div>
          <p class="font-bold text-sm">{`${first_name} ${last_name}`}</p>
        </div>
        <CardDescription className="p-0 md:max-w-[500px] md:truncate">
          {`${position}`}
        </CardDescription>
      </div>
    </div>
  </CardHeader>
</Card>
